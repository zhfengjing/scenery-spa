// .swcrc 配置相对 Babel 更简洁，核心配置主要在 jsc 和 module 两个部分。大多数项目只需要配置 parser 和 transform 即可。
{
    "jsc": { //jsc (JavaScript Compiler): JavaScript/TypeScript 编译相关配置
        "parser": { //jsc.parser - 解析器配置
            "syntax": "typescript", //指定语法为 TypeScript
            "tsx": true, //启用对 TSX 语法的支持
            "decorators": true //启用对装饰器语法的支持
        },
        "transform": {
            "react": {
                "runtime": "automatic",
                "development": false, //禁用开发模式相关的转换
                "useBuiltins": true,
                "refresh": true //启用 React 刷新功能 React Fast Refresh
            }
        },
        "target": "es2015",
        "minify": {
            "compress": {
                "drop_console": true, //去除console.log
                "drop_debugger": true, //去除debugger,
                "unused": true //删除未使用的代码
            },
            "mangle": false //不启用变量名混淆
        }
    },
    "module": {
        "type": "es6",
        "strict": true,
        "noInterop": false
    },
    "sourceMaps": "inline", //启用源映射生成,内联 source map，方便调试, "inline",true
    "minify": false // 开发时不压缩
}
